{
    "$schema": "http://json.schemastore.org/template",
    "author": "Andrew Stakhov",
    "classifications": [ "Console", "Buildpack" ], 
    "name": "Cloud Foundry Buildpack Template",
    "identity": "CloudFoundry.Buildpack",         
    "groupIdentity":"CloudFoundry",
    "shortName": "buildpack",                    
    "tags": {
      "language": "C#",                         
      "type":"project"
    },
    "sourceName": "MyBuildpack",             
    "preferNameDirectory":true,
  symbols: {
    "UsePackages": {
      datatype: "bool",
      type: "generated",
      generator: "constant",
      parameters: {
        value: "True"
      },
      defaultValue: "True"
    }
  },
  "sources": [
        {
          "modifiers": [
            {
              "exclude": [
                ".git/**",
                ".nuke/**",
                "**/.dotnet/**",
                "artifacts/**",
                "**/.idea/**",
                "**/.vs/**",
                ".tmp/**",
                "buildpack.nuspec",
                ".template.build/**",
                ".template.artifacts/**",
                "src/CloudFoundry.Buildpack.V2.Analyzers/**",
                "src/CloudFoundry.Buildpack.V2.Lib/**",
                "tests/CloudFoundry.Buildpack.V2.Testing/**",
                "**/*.DotSettings",
                "nuget.config"
              ]
            }
          ]
        }
      ]
  }