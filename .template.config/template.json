    "classifications": [ "Console", "Buildpack" ], 
    "name": "Cloud Foundry Buildpack Template",
    "identity": "CloudFoundry.Buildpack",         
    "groupIdentity":"CloudFoundry",
    "shortName": "buildpack",                    
    "tags": {
      "language": "C#",                         
      "type":"project"
    },
    "sourceName": "MyBuildpack",             
